<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :current_price, input_html: {min: 0} %>
    <%= f.input :quantity, input_html: {min: 0} %>
    <%= f.input :description %>
    <%= f.association :brand %>


    <%= f.input :avatar, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
